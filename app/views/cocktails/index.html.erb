<div class="cards m-3">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail.id), style: 'text-decoration: none;' do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= photo_check_path(cocktail) %> )">
        <div style="padding: 5px;">
          <%= cocktail.name %>
          <% review_props = review_average(cocktail.reviews) %>
          <% review_props[0].times do %>
              <span>‚≠ê</span>
            <% end %>
            (<%= cocktail.reviews.length %> ratings)
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to 'Create cocktail', new_cocktail_path, class: "btn btn-primary ml-3" %>

