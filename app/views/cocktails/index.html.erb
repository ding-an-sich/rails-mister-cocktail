<div class="cards m-3">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://img.estadao.com.br/fotos/crop/960x540/resources/jpg/8/4/1532639430348.jpg)">
      <%= link_to cocktail.name, cocktail_path(cocktail.id), class: "card-link" %>
    </div>
  <% end %>
</div>

<%= link_to 'Create cocktail', new_cocktail_path, class: "btn btn-primary ml-3" %>


