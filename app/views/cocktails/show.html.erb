<h1> <%= @cocktail.name %> </h1>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to 'X', dose_path(dose.id), method: :delete %>
  </li>
<% end %>
<%= link_to 'Edit this cocktail', new_cocktail_dose_path(@cocktail.id) %>
<%= link_to 'Back', cocktails_path %>
